@model Fall2024_Assignment3_jtadams5.Models.Movie

@{
    ViewData["Title"] = "Details";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Movies.css" />
}
<div class="bg-details">
    <h1>Details for <i>@Html.DisplayFor(model => model.Title)</i></h1>

    <div class="details">
        <hr />
        <img src="@Html.DisplayFor(model => model.PosterURL)" alt="@Html.DisplayFor(model => model.Title)" class="details-poster">
        <div class="details-layout">
            <p>Text</p>
        </div>
    </div>
    <div>   
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ReleaseYear)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PosterURL)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PosterURL)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.imdbURL)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.imdbURL)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.MovieID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>